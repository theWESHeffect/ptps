<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragmentPaymentDetails"
    android:layout_height="match_parent"
    tools:context=".fragments.owner.PaymentDetailsFragment" >

        <LinearLayout
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_width="match_parent" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#D3D3D3" />

        <TextView
            android:id="@+id/labelDayPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryLightColor"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Today's Payments" />

        <LinearLayout
            android:id="@+id/subItemDayPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical" >

            <TextView
                android:layout_margin="15dp"
                android:id="@+id/day_payments_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_currency"
                android:textColor="@color/primaryDarkColor"
                android:textSize="26sp"
                android:textStyle="bold"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#D3D3D3" />

            <TextView
                android:id="@+id/labelWeekPayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="This Month's Payments"
                android:textColor="@color/primaryLightColor"
                android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/subItemWeekPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/current_month_payments_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/placeholder_currency"
                android:textColor="@color/primaryDarkColor"
                android:textSize="26sp"
                android:textStyle="bold"

                />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#D3D3D3" />

            <TextView
                android:id="@+id/labelMonthPayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Past Month's Payments"
                android:textColor="@color/primaryLightColor"
                android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/subItemMonthPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_margin="15dp"
                android:id="@+id/past_month_payments_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:text="@string/placeholder_currency"
                android:textColor="@color/primaryDarkColor"
                android:textStyle="bold"

                />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>